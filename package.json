{
  "name": "@libero/event-types",
  "version": "0.1.0",
  "description": "Event types sent by the Libero message bus",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project tsconfig.json",
    "start:dev": "dotenv -e ../.env -- nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/main.ts",
    "postinstall": "npm run build",
    "test": "tslint --project tsconfig.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/libero/event-types"
  },
  "author": "libero-npm@elifesciences.org",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "typescript": "^3.5.3"
  }
}
